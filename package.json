{
  "name": "zenpad.js",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run watch & npm run lite",
    "lite": "lite-server",
    "build": "browserify src/Zenpad.js -p [babelify] -o build/zenpad.js -v -d",
    "watch": "watchify src/Zenpad.js -p [babelify] -o build/zenpad.js -v -d",
    "typings": "typings",
    "typings:install": "typings install --global --save",
    "postinstall": "typings install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sawa-zen/zenpad.js.git"
  },
  "keywords": [
    "gamepad"
  ],
  "author": "sawa-zen",
  "license": "ISC",
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "lite-server": "^2.2.0",
    "watchify": "^3.7.0"
  }
}
