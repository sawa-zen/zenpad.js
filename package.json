{
  "name": "zenpad.js",
  "version": "0.0.18",
  "main": "build/zenpad.js",
  "description": "GamePad for canvas.",
  "scripts": {
    "start": "npm run watch & npm run lite",
    "lite": "lite-server",
    "build": "browserify src/Zenpad.js --standalone Zenpad -t babelify -d | derequire > build/zenpad.js",
    "watch": "watch 'npm run build' src/ --ignoreDotFiles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sawa-zen/zenpad.js.git"
  },
  "keywords": [
    "gamepad"
  ],
  "author": "sawa-zen",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "derequire": "^2.0.6",
    "lite-server": "^2.2.0",
    "pixi.js": "^4.3.0",
    "victor": "^1.1.0",
    "watch": "^1.0.1"
  }
}
