{
  "name": "zenpad.js",
  "version": "0.1.14",
  "main": "build/zenpad.js",
  "description": "GamePad for canvas.",
  "maintainers": [
    {
      "name": "Takayoshi Sawada",
      "email": "sawadasuiren@gmail.com",
      "web": "http://sawa-zen.com"
    }
  ],
  "scripts": {
    "start": "npm run watch & npm run lite",
    "lite": "lite-server",
    "build:production": "mkdirp build && browserify src/Zenpad.js --standalone Zenpad -t babelify -p licensify | derequire > build/zenpad.js",
    "build:develop": "mkdirp build && browserify src/Zenpad.js --standalone Zenpad -t babelify -d -p licensify | derequire > build/zenpad.js",
    "minify": "uglifyjs build/zenpad.js --mangle --compress --comments --output build/zenpad.min.js",
    "watch": "watch 'npm run build:develop' src/ --ignoreDotFiles",
    "versionup": "versionup -p './' -l 'micro' -a '1'",
    "prepublish": "npm run build:production && npm run minify && npm run versionup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sawa-zen/zenpad.js.git"
  },
  "keywords": [
    "gamepad"
  ],
  "author": "sawa-zen",
  "license": "MIT",
  "dependencies": {
    "pixi.js": "^4.5.3",
    "victor": "^1.1.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "derequire": "^2.0.6",
    "licensify": "^3.1.3",
    "lite-server": "^2.3.0",
    "mkdirp": "^0.5.1",
    "uglify-js": "^2.8.29",
    "versionup": "^2.1.2",
    "watch": "^1.0.2"
  }
}
